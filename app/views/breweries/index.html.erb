<h1>Breweries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th> 
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @breweries.each do |b| %>
      <tr>
        <th><%= b['brewery_name'] %></th>
        <th><%= b['brewery_city'] %></th>
        <th><%= b['brewery_state'] %></th
      </tr>
    <% end %> 
</table>
<br>
<table>
    </tbody>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abv</th>
      <th>Description</th> 
      <th>Style</th> 
      <th>Available</th> 
      <th># of Ratings</th>
      <th>Rating</th>
      <th>Brewery id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <th><%= beer['beer_name'] %></th>
        <th><%= beer['beer_abv'] %></th>
        <th><%= beer['beer_description'] %></th>
        <th><%= beer['beer_style'] %></th>
        <th><%= beer['is_in_production'] %></th>
        <th><%= beer['rating_count'] %></th>
        <th><%= beer['rating_score'] %></th>
        <th><%= beer['brewery_id'] %></th>
      </tr>
    <% end %> 
  </tbody>
</table>
<br>
<table>
    </tbody>
  <thead>
    <tr>
      <th>Id</th>
      <th>Checkin Id</th>
      <th>Created</th> 
      <th>Rating</th> 
      <th>User Id</th> 
      <th>Beer Id</th>
      <th>Brewery id</th>
      <th>Venue City</th>
      <th>Venue State</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @checkins.each do |c| %>
      <tr>
        <th><%= c['id'] %></th>
        <th><%= c['checkin_id'] %></th>
        <th><%= c['created_at'] %></th>
        <th><%= c['rating_score'] %></th>
        <th><%= c['uid'] %></th>
        <th><%= c['bid'] %></th>
        <th><%= c['brewery_id'] %></th>
        <th><%= c['venue_city'] %></th>
        <th><%= c['venue_state'] %></th>
      </tr>
    <% end %> 
  </tbody>
</table>

<table>
    </tbody>
  <thead>
    <tr>
      <th>Id</th>
      <th>User Id</th>
      <th>Name</th> 
      <th>Location</th> 
  
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

  </tbody>
</table>



